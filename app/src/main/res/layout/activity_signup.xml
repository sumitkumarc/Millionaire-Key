<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".Activity.SignupActivity">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bt"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumgothicregular"
                        android:padding="5dp"
                        android:text="Personal Info."
                        android:textColor="@color/grey_8f"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_refcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        app:errorTextAppearance="@style/error_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_refcode"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Referral Code "
                            android:textAllCaps="true"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/grey_4a"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        app:errorTextAppearance="@style/error_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Name"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/grey_4a"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        app:errorTextAppearance="@style/error_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_email"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Email ID"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textColor="@color/grey_4a"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Gender "
                        android:textColor="@color/grey_8f"
                        android:textSize="18dp" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioM"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="Male"
                            android:textIsSelectable="true"
                            android:textSize="14dp" />

                        <RadioButton
                            android:id="@+id/radioF"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:checked="false"
                            android:text="Female"
                            android:textSize="14dp" />

                        <RadioButton
                            android:id="@+id/radioO"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:checked="false"
                            android:text="Other"
                            android:textSize="14dp" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_handover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        app:errorTextAppearance="@style/error_appearance">

                        <EditText
                            android:id="@+id/ed_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:focusable="false"
                            android:hint="Birth Date"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="date"
                            android:textColor="#000" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_phoneno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        app:errorTextAppearance="@style/error_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_phoneno"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Phone Number"
                            android:imeOptions="actionNext"
                            android:inputType="number|numberSigned|numberDecimal|numberPassword|phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/grey_4d"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        app:errorTextAppearance="@style/error_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_add"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Address"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:nextFocusForward="@+id/tv_city"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textColor="@color/grey_4d"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.50"
                        app:errorTextAppearance="@style/error_appearance">


                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="CITY"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusForward="@+id/tv_add_two"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/grey_4d"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_landmark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.50"
                        app:errorTextAppearance="@style/error_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_Landmark"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="6"
                            android:hint="LANDMARK"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLength="30"
                            android:nextFocusForward="@+id/tv_state"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/grey_4d"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.50"
                        app:errorTextAppearance="@style/error_appearance">


                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="STATE"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusForward="@+id/tv_pincode"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/grey_4d"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/in_pinno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.50"
                        app:errorTextAppearance="@style/error_appearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_pincode"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="6"
                            android:hint="PIN CODE"
                            android:inputType="number|numberSigned|numberDecimal|numberPassword|phone"
                            android:maxLength="6"
                            android:paddingBottom="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:textColor="@color/grey_4d"
                            android:textSize="14dp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumgothicregular"
                        android:padding="5dp"
                        android:text="Security Question "
                        android:textColor="@color/grey_8f"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumgothicregular"
                            android:gravity="left"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:text="Question"
                            android:textColor="@color/grey_8f"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/bg_edittext_icon">

                            <Spinner
                                android:id="@+id/spinnerOfferType"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:spinnerMode="dropdown"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp">

                            <EditText
                                android:id="@+id/ed_ans1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext_icon"
                                android:drawablePadding="20dp"
                                android:hint="Answer"
                                android:inputType="textEmailAddress"
                                android:paddingBottom="12dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="12dp"
                                android:paddingTop="12dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumgothicregular"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Question 2"
                            android:textColor="@color/grey_8f"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            android:background="@drawable/bg_edittext_icon">

                            <Spinner
                                android:id="@+id/sp_2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:spinnerMode="dropdown"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:layout_marginRight="5dp">

                            <EditText
                                android:id="@+id/ed_ans2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_edittext_icon"
                                android:drawablePadding="20dp"
                                android:hint="Answer"
                                android:inputType="textEmailAddress"
                                android:paddingBottom="12dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="12dp"
                                android:paddingTop="12dp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/macos_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                    <TextView
                        android:id="@+id/txt_accepte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/your_string_here" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:gravity="center">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="10dp">

            <Button
                android:id="@+id/bt_prosstopay"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/nanumgothicregular"
                android:padding="5dp"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
